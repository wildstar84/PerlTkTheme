separator.vertical {
        margin: 0px;
        padding: 0px;
        border-left: 1px solid @inset_darker_color;
        border-right: 1px solid @darker_themed_color;
}

separator.horizontal {
        margin: 0px;
        padding: 0px;
        border-top: 1px solid @inset_darker_color;
        border-bottom: 1px solid @darker_themed_color;
}

toolbar separator {
        margin: 5px;
        margin-top: 7px;
        margin-bottom: 7px;
        border-left: 1px solid @inset_darker_color;
        border-right: 1px solid @darker_themed_color;
}

menu separator {
        margin: 0px;
        padding: 0px;
        border-top: 1px solid @inset_darker_color;
        border-bottom: 1px solid @darker_themed_color;
}

