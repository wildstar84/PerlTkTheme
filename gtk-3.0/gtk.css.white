/**********************************************/
/* check, radio */
/**********************************************/

checkbutton, radiobutton {
    color: @text_fg_color;
    background-color: @base_color;
}

/*notebook checkbutton, notebook radiobutton {
    background-color: @darker_themed_color;
}*/

checkbutton:disabled, radiobutton:disabled {
    color: @darker_themed_color;
}

check {
    padding: 0px;
    border: none;
    margin: 5px;
    min-width: 13px;
    min-height: 13px;
        -gtk-icon-source: url("../img/check-unchecked-tk.png");
}

check:checked {
        -gtk-icon-source: url("../img/check-checked-tk.png");
}

radio {
    padding: 0px;
    border: none;
    margin: 5px;
    min-width: 13px;
    min-height: 13px;
        -gtk-icon-source: url("../img/radio-unchecked-tk.png");
}

radio:checked {
    min-width: 13px;
    min-height: 13px;
        -gtk-icon-source: url("../img/radio-checked-tk.png");
}

check:disabled {
    min-width: 13px;
    min-height: 13px;
        -gtk-icon-source: url("../img/check-disabled-unchecked-tk.png");
}

radio:disabled {
    min-width: 13px;
    min-height: 13px;
        -gtk-icon-source: url("../img/radio-disabled-unchecked-tk.png");
}

check:disabled:checked {
        -gtk-icon-source: url("../img/check-disabled-checked-tk.png");
    min-width: 13px;
    min-height: 13px;
}

radio:disabled:checked {
        -gtk-icon-source: url("../img/radio-disabled-checked-tk.png");
    min-width: 13px;
    min-height: 13px;
}

/* check and radio in menu */
menuitem check, menuitem radio {
        -gtk-icon-source: url("../img/menuitem-transparent.png");
    min-width: 8px;
    min-height: 7px;
}

menuitem check:checked {
        -gtk-icon-source: url("../img/menuitem-check-checked.png");
    min-width: 8px;
    min-height: 7px;
}

menuitem check:disabled:checked {
        -gtk-icon-source: url("../img/menuitem-check-checked-disabled.png");
    min-width: 8px;
    min-height: 7px;
}

menuitem radio:checked {
    min-width: 5px;
    min-height: 5px;
        -gtk-icon-source: url("../img/menuitem-radio-checked.png");
}

menuitem radio:disabled:checked {
    min-width: 5px;
    min-height: 5px;
        -gtk-icon-source: url("../img/menuitem-radio-checked-disabled.png");
}

/* handbrake/defaults audio; tweaktools/bureau*/
list row checkbutton, list row radiobutton {
    background-color: transparent;
    color: @text_fg_color;
}

/* handbrake/defaults audio; tweaktools/bureau */
list row checkbutton label:disabled,
list row radiobutton label:disabled,
list row check:disabled,
list row radio:disabled {
    background-color: transparent;
    color: @darker_color;
    min-width: 13px;
    min-height: 13px;
        -gtk-icon-source: url("../img/radio-disabled-unchecked-tk.png");
}


/**********************************************/
/* popover */
/**********************************************/

popover {
    border-left: 2px solid @outset_active_color;
    border-top: 2px solid @outset_active_color;
    border-right: 2px solid @text_fg_color;
    border-bottom: 2px solid @text_fg_color;
}

popover modelbutton {
        padding: 0px;
        padding-top: 2px;
        padding-bottom: 2px;
}

popover modelbutton:hover, popover modelbutton:active {
    background-color: @menuitem_selected_bg_color;
    color: @menuitem_selected_fg_color;
}

/**********************************************/
/* switch */
/**********************************************/

switch {
    font-weight: bold;
    background-color: @base_color;
    color: @text_fg_color;
    border-left: 2px solid @bevel_shadow;
    border-top: 2px solid @bevel_shadow;
    border-right: 2px solid @bevel_highlight;
    border-bottom: 2px solid @bevel_highlight;
}

switch:checked {
   background-color: @tk_disabledForeground;
    border-left: 2px solid @button_activeBevelShadow;
    border-top: 2px solid @button_activeBevelShadow;
    border-right: 2px solid @button_activeBevelHighlight;
    border-bottom: 2px solid @button_activeBevelHighlight;
}

switch slider {
    background-color: @darker_themed_color;
    padding: 1px;
    background-repeat: no-repeat;
    background-position: center center;
    background-image: url("../img/scrollbar_thumb.png");
    border-left: 2px solid @bevel_highlight;
    border-top: 2px solid @bevel_highlight;
    border-right: 2px solid @bevel_shadow;
    border-bottom: 2px solid @bevel_shadow;
}

switch slider:hover {
    background-color: @lighter_color;
}

/* JWT:DOESN'T WORK FOR SOME REASON?!:
